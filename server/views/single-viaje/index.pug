extends ../includes/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="Imagen de nosotros" class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                p
                    i.fas.fa-calendar-alt
                    |  Fecha Viaje: #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |  #{viaje.precio} COL
                p
                    i.fas.fa-users
                    | #{viaje.disponibles} Disponibles
                p= viaje.descripcion