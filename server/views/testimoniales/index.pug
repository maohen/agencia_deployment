extends ../includes/index
block contenido
    main.container.mt-5.mb-5.text-center
        h1 #{pagina}

        .row
            .col-12
                include ../includes/parcials/testimoniales.pug
                
            .col-12
                h2 Agrega #{pagina}
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center= error.mensaje

                .row.justify-content-center
                    .col-md-8
                        form.text-left(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(type="text", placeholder="Tu nombre", name="nombre", id="nombre", class="form-control", value=nombre)
                            .form-group
                                label(for="correo") Correo Electr√≥nico
                                input(type="email", placeholder="Tu correo", name="correo", id="correo", class="form-control", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea(cols="30", rows="3", placeholder="Tu mensaje", name="mensaje", id="mensaje", class="form-control")= mensaje
                            input(type="submit", class="btn btn-success btn-block", value="AGREGAR")